@model RapidBootcamp.WebApplication.Models.Customer;

<html>
<head>
    <title>Edit Customer</title>
</head>
<body>
    <h2>Edit Customer</h2>
    <form method="post" action="/Customers/Edit">
        <input type="hidden" value="@Model.CustomerId" name="customerId" />
        <div>
            <label for="CustomerName">Customer Name:</label>
            <input type="text" value="@Model.CustomerName" name="CustomerName" />
        </div>
        <div>
            <label for="Address">Customer Addres:</label>
            <input type="text" value="@Model.Address" name="Address" />
        </div>
        <div>
            <label for="City">Customer City:</label>
            <input type="text" value="@Model.City" name="City" />
        </div>
        <div>
            <label for="Email">Category Email:</label>
            <input type="text" value="@Model.Email" name="Email" />
        </div>
        <div>
            <label for="PhoneNumber">Phone Number:</label>
            <input type="text" value="@Model.PhoneNumber" name="PhoneNumber" />
        </div>
        <div>
            <input type="submit" value="Edit" />
        </div>
    </form>
</body>
</html>
